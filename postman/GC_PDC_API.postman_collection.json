  "item": [
    {
      "name": "Classifications",
      "item": [
        {
          "name": "Get Classifications (Cursor Pagination)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Get classifications (cursor) returns 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/classifications/cursor?limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "classifications", "cursor"],
              "query": [
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get All Classifications",
          "request": {
            "method": "GET",
            "url": {
